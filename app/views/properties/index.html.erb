<p><%= notice %></p>

<h1>property list</h1>

<table>
  <thead>
    <tr>
      <th>property name</th>
      <th>rent</th>
      <th>address</th>
      <th>age</th>
      <th>remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.rent %>円</td>
        <td><%= property.address %></td>
        <td><%= property.age %>年</td>
        <td><%= property.content %></td>
        <td><%= link_to 'show', property , class: "btn btn-primary" %></td>
        <td><%= link_to 'edit', edit_property_path(property) %></td>
        <td><%= link_to 'delete', property, method: :delete, data: { confirm: 'you sure？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

