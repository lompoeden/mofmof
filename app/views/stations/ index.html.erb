<p><%= notice %></p>

<h1>station list</h1>

<table>
  <thead>
    <tr>
      <th>station name</th>
      <th>rent</th>
      <th>address</th>
      <th>age</th>
      <th>remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |station| %>
      <tr>
        <td><%= station.name %></td>
        <td><%= station.rent %>円</td>
        <td><%= station.address %></td>
        <td><%= station.age %>年</td>
        <td><%= station.content %></td>
        <td><%= link_to 'show', station %></td>
        <td><%= link_to 'edit', edit_station_path(station) %></td>
        <td><%= link_to 'delete', station, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

